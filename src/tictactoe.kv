#:kivy 1.9.1

<MainMenuButton@Button>
    font_size: 50


<MultiplayerOptionButton@Button>
    font_size: 30


<GameButton@Button>:
    siz_hint_x: None
    width: 200
    font_size: 100


<GameLayout@GridLayout>:
    cols: 3
    row_force_default: True
    col_default_width: 200
    row_default_height: 200
    pos_hint: { "center_x": 0.5 }
    size_hint: None, None
    size: self.minimum_size
    top: self.height


<MainMenuView>:
    BoxLayout:
        orientation: "vertical"

        MainMenuButton:
            id: btnSinglePlayer
            text: "Singleplayer"
            on_release: root.btnSinglePlayer_release()

        MainMenuButton:
            id: btnMultiplayerOption
            text: "Multiplayer"
            on_release: root.btnMultiplayerOption_release()

        MainMenuButton:
            id: btnExit
            text: "Exit"
            on_release: root.btnExit_release()


<SinglePlayerView>:
    GameLayout:
        GameButton:
            id: btn1
            on_press: root.btnGame_press(btn1)
            on_release: root.btnGame_release(btn1)

