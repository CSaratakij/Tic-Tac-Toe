<MultiplayerOptionView>
    BoxLayout:
        orientation: "horizontal"

        MultiplayerOptionButton:
            id: btnLocalMultiplayer
            text: "Local"
            on_release: root.btnLocalMultiplayer_release()

        MultiplayerOptionButton:
            id: btnOnlineMultiplayer
            text: "Online(Coming Soon!)"
            font_size: 20
            on_release: root.btnOnlineMultiplayer_release()

        MultiplayerOptionButton:
            id: btnBack
            text: "Back"
            size_hint: None, None
            height: root.height
            on_release: root.btnBack_release()


