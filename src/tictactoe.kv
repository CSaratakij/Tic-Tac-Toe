#:kivy 1.9.1

<MainMenuButton@Button>
    font_size: 50


<GameButton@Button>:
    siz_hint_x: None
    width: 200
    font_size: 100


<GameLayout@GridLayout>:
    cols: 3
    row_force_default: True
    col_default_width: 200
    row_default_height: 200
    pos_hint: { "center_x": 0.5 }
    size_hint: None, None
    size: self.minimum_size
    top: self.height


<MainMenuView>:
    BoxLayout:
        orientation: "vertical"
        
        MainMenuButton:
            id: btnPlay
            text: "Play"
            on_release: root.btnPlay_release(btnPlay)
            
        MainMenuButton:
            id: btnExit
            text: "Exit"
            on_release: root.btnExit_release(btnExit)


<SinglePlayerView>:
    GameLayout:
        GameButton:
            id: btn1
            on_press: root.btnGame_press(btn1)
            on_release: root.btnGame_release(btn1)
            
        GameButton:
            id: btn2
            on_press: root.btnGame_press(btn2)
            on_release: root.btnGame_release(btn2)
            
        GameButton:
            id: btn3
            on_press: root.btnGame_press(btn3)
            on_release: root.btnGame_release(btn3)
            
        GameButton:
            id: btn4
            on_press: root.btnGame_press(btn4)
            on_release: root.btnGame_release(btn4)

        GameButton:
            id: btn5
