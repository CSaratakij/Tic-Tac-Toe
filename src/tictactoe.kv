<GameButton@Button>:
    siz_hint_x: None
    width: 200
    font_size: 100
    
    
<GameLayout@GridLayout>:
    cols: 3
    row_force_default: True
    col_default_width: 200
    row_default_height: 200
    pos_hint: { "center_x": 0.5 }
    size_hint: None, None
    size: self.minimum_size
    top: self.height


<SinglePlayerView>:
